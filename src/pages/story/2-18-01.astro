---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import BackgroundImage from "@/assets/story/scene-2/2-18.webp";
import BackgroundImageLow from "@/assets/story/scene-2/2-18-low.webp";

import TextBubble from "@/components/TextBubble";
import Tap from "@/components/Tap";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="กระทิงเบ๊"
      text={"จู่ ๆ ใบพัดก็หมุนแรงมาก เราควรทำยังไงกันดี"}
      className="bg-bull"
    />
  </div>
  <Tap delay={0.5} redirectUrl="/story/2-18-02" client:load />
</ImagePageLayout>
