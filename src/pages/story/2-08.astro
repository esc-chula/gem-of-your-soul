---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import BackgroundImage from "@/assets/story/scene-2/2-08.webp";
import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <TextBubbleWrapper>
    <TextBubble
      name="กระทิงดำกล้ามโต"
      text={"%USERNAME% พูดถูก . . . เอาล่ะ ทุกคนมาทำตามที่มนุษย์คนนี้บอกเร็วเข้า"}
      className="bg-bull"
      client:only="react"
    />
  </TextBubbleWrapper>

  <Tap
    delay={0.5}
    redirectUrl="/story/2-09-01"
    color="text-black"
    client:load
  />
</ImagePageLayout>
