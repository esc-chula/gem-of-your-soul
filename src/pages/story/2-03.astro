---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-2/2-03.webp";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <TextBubbleWrapper>
    <TextBubble
      name="กระทิงกล้ามโต"
      text={"วันนี้ต้องขนชิ้นส่วนไปประกอบเยอะมากเลย สายพานก็ดันมาเสียอีก"}
      className="bg-bull"
    />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/2-04" color="text-black" client:load />
</ImagePageLayout>
