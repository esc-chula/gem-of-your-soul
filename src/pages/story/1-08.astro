---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-1/1-05.webp";
import BackgroundImageLow from "@/assets/story/scene-1/1-05-low.webp";
import AnswerComponent from "@/components/inputs/AnswerComponent";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="บีเวอร์"
      text={"เยี่ยมไปเลย แต่ตอนนี้พวกเรากำลังต้องการไม้เพิ่มน่ะสิ"}
      className="bg-beaver"
    />
  </div>

  <AnswerComponent
    answers={[
      { text: "ตัดต้นไม้แถวนี้เลยละกัน!!", attribute: "Se" },
      { text: "เราขอดูตัวอย่างไม้ที่พวกเธอใช้ก่อนนะ", attribute: "Si" },
      { text: "ลองสร้างอีกแบบไหม จะได้ประหยัดไม้", attribute: "Ni" },
      { text: "ที่นี่มีโดเรม่อนให้เรียกไหมอะ", attribute: "Ne" },
    ]}
    redirectUrl="/story/1-09"
    client:only="react"
  />
</ImagePageLayout>
