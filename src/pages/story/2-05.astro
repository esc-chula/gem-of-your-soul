---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-2/2-05.webp";
import BackgroundImageLow from "@/assets/story/scene-2/2-05-low.webp";
import Tap from "@/components/Tap";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble
      name="กระทิงกล้ามโต (ยิ้ม)"
      text={"เป็นความคิดที่ดี !"}
      className="bg-bull"
    />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/2-06" color="text-black" client:load />
</ImagePageLayout>
