---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-1/1-02.webp";
import BackgroundImageLow from "@/assets/story/scene-1/1-02-low.webp";
import AnswerComponent from "@/components/inputs/AnswerComponent";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="%USERNAME%"
      text={"ทำไมตรงนั้นดูวุ่น ๆ นะ สงสัยจะมีปัญหาแน่เลย"}
      className="bg-user"
      client:only="react"
    />
  </div>

  <AnswerComponent
    answers={[
      { text: "ทำไมถึงเกิดปัญหา ควรปรับปรุงตรงไหน", attribute: "Ti" },
      { text: "วิธีไหนที่จะทำให้เขื่อนสร้างสำเร็จได้", attribute: "Te" },
      {
        text: "พวกเขาน่าจะต้องการความช่วยเหลือนะ",
        attribute: "Fe",
      },
      { text: "น่าสนใจดีแฮะ ลองเข้าไปดูก่อนดีกว่า", attribute: "Fi" },
    ]}
    redirectUrl="/story/1-04"
    client:only="react"
  />
</ImagePageLayout>
