---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import AnswerComponent from "@/components/inputs/AnswerComponent";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-3/09.webp";
import BackgroundImageLow from "@/assets/story/scene-3/09-low.webp";

import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble
      name="Engine"
      text={"ยะ . . . แย่แล้ว ! คอมดับ ทำยังไงดี !!!"}
      className="bg-engine"
      client:only="react"
    />
    <TextBubble
      name="%USERNAME%"
      text={"งั้นลอง . . ."}
      className="bg-user"
      client:only="react"
    />
  </TextBubbleWrapper>

  <AnswerComponent
    answers={[
      { text: "พยายามวิเคราะห์ถึงสาเหตุที่คอมดับ", attribute: "Ni" },
      { text: "ลองตบ ลองซ่อม เช็กว่าสายไฟหลุดไหม", attribute: "Se" },
      {
        text: "ครั้งก่อนเคยเกิดปัญหาแบบนี้มั้ย ตอนนั้นแก้ยังไง",
        attribute: "Si",
      },
      { text: "หาพระมาห้อย เอายันต์มาแปะ ต้องมูเท่านั้น", attribute: "Ne" },
    ]}
    redirectUrl="/story/3-14"
    client:only="react"
  />
</ImagePageLayout>
