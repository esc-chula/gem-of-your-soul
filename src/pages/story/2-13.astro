import BackgroundImage from "@/assets/story/scene-2/2-13.webp";
import BackgroundImageLow from "@/assets/story/scene-2/2-13-low.webp";

import Tap from "@/components/Tap";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
import TextBubble from "@/components/TextBubble";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble name="ชาไทย" text={"ไฟดับเหรอ !"} className="bg-chathai" />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/2-14-01" client:load />
