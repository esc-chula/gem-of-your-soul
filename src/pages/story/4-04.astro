---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-4/02.webp";
import BackgroundImageLow from "@/assets/story/scene-4/02-low.webp";

import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble
      name="%USERNAME%"
      text={"ชาไทย เธออยู่ไหน!!"}
      className="bg-user"
      client:only="react"
    />
    <TextBubble
      name="ชาไทย"
      text={"อยู่ข้างหลังเธอนี่ไงง จะตะโกนทำไมเล่า"}
      className="bg-chathai"
    />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/4-05" client:load />
</ImagePageLayout>
