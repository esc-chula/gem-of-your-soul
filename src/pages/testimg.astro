---
import BackgroundImage from "@/assets/story/scene-0/0-08.webp";
import BackgroundImageLow from "@/assets/story/scene-0/0-08-low.webp";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

let imglow = true;
---

