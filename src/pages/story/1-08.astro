---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-1/05.webp";
import AnswerComponent from "@/components/inputs/AnswerComponent";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="บีเวอร์"
      text={"เยี่ยมไปเลย แต่ตอนนี้พวกเรากำลังต้องการไม้เพิ่มน่ะสิ"}
      className="bg-beaver"
    />
  </div>

  <AnswerComponent
    answers={[
      { text: "ตัดต้นไม้แถวนี้เลยละกัน !!", attribute: "A" },
      { text: "ปกติพวกเธอขนมาจากไหน เดี๋ยวไปช่วย", attribute: "B" },
      { text: "ลองสร้างอีกแบบไหม จะได้ประหยัดไม้", attribute: "C" },
      { text: " ที่นี่เป็นดินแดนวิเศษหนิ มีโดเรม่อนไหมอะ", attribute: "D" },
    ]}
    redirectUrl="/story/1-09"
    client:only
  />
</ImagePageLayout>
