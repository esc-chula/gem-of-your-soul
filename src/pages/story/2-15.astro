---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import BackgroundImage from "@/assets/story/scene-2/2-15.webp";
import BackgroundImageLow from "@/assets/story/scene-2/2-15-low.webp";

import TextBubble from "@/components/TextBubble";
import Tap from "@/components/Tap";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble
      name="กระทิงเบ๊"
      text={"หัวหน้าคับ อยู่ ๆ ใบพัดเครื่องบินก็ทำงานเอง"}
      className="bg-bull"
    />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/2-16-01" client:load />
</ImagePageLayout>
