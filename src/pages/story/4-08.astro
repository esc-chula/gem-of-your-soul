---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-4/05.webp";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <div class="absolute top-20 flex w-full justify-center">
    <div class="mb-12 flex flex-col items-center">
        <TextBubble
        name="ชาไทย"
        text={"เธอได้ค้นพบตัวตนที่แท้จริง ผ่านการตัดสินใจเลือกเส้นทางของตนเอง และเมื่อถึงเวลาที่เหมาะสม อัญมนีของเธอจึงเปล่งประกายออกมาไงล่ะ"}
        className="bg-chathai"
        />
    </div>
  </div>
  <Tap delay={0.5} redirectUrl="/story/4-09" client:load />
</ImagePageLayout>