---
interface Props {
    name: string;
    text: string;
}

const {text, name} = Astro.props;
---
<div class = "text-card">
    <p class = "card-body"><b>{name}</b> : {text}</p>
</div>

<style>
.text-card{
    margin: auto;
    background: rgb(242, 165, 82);
    border: 2.75px solid #ffffff;
    border-radius: 8px;
    width: 330px;
    height: fit-content;
    margin-top: 20px;
    
}
.card-body {
    
    font-size: 14px;
    text-align: left;
    margin-left: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
    word-wrap: normal;
    
}


</style>
