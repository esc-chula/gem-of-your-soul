---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import BackgroundImage from "@/assets/story/scene-2/2-10.webp";
import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}
  ><div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="กระทิงดำกล้ามโต (ยิ้ม)"
      text={"เยี่ยมมาก %USERNAME% เพื่อเป็นการตอบแทน ฉันจะเล่าเรื่องโรงงานนี้ให้ฟังละกัน"}
      className="bg-bull"
    />
  </div>
  <Tap
    delay={0.5}
    redirectUrl="/story/2-12"
    color="text-black"
    client:load
  /></ImagePageLayout
>
