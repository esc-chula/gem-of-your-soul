---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import BackgroundImage from "@/assets/story/scene-2/2-08.webp";
import TextBubble from "@/components/TextBubble";
import AnswerComponent from "@/components/inputs/AnswerComponent";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}
  ><div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="ชาไทย"
      text={"%USERNAME% เราจะทำยังไงกันดี ?"}
      className="bg-chathai"
    />
  </div>
  <AnswerComponent
    answers={[
      { text: "เข้าไปหาสาเหตุก่อนไหมว่าสายพานเป็นอะไร", attribute: "Ti" },
      { text: "ทุกคนต้องช่วยกันเก็บของโดยด่วนเลย", attribute: "Te" },
      { text: "มีใครบาดเจ็บตรงไหนมั้ย เช็กอาการทุกคนก่อน", attribute: "Fe" },
      {
        text: "ไม่มีอะไรหรอก ทำงานของตัวเองต่อกันเถอะ",
        attribute: "Fi",
      },
    ]}
    redirectUrl="/story/2-10"
    client:only
  />
</ImagePageLayout>
