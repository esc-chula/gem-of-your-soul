---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-1/1-04.webp";
import BackgroundImageLow from "@/assets/story/scene-1/1-04-low.webp";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble
      name="%USERNAME%"
      text={"สวัสดี ! เรา %USERNAME% นะ เธอดูวุ่น ๆ นะ มีอะไรที่เราพอจะช่วยได้มั้ย ?"}
      className="bg-user"
      client:only="react"
    />
    <TextBubble
      name="บีเวอร์"
      text={"โอ้ ! สวัสดี เราบีเวอร์นะ เรากำลังต้องการผู้ช่วยพอดีเลย อยากทำหน้าที่ไหนเป็นพิเศษมั้ย"}
      className="bg-beaver"
    />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/1-06" client:load />
</ImagePageLayout>
