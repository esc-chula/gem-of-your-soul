---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-2/2-02.webp";
import BackgroundImageLow from "@/assets/story/scene-2/2-02-low.webp";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble
      name="กระทิงกล้ามโต"
      text={"เห้ย!!! ตรงนั้นน่ะ อย่ายืนนิ่งสิ ขอแรงหน่อย"}
      className="bg-bull"
    />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/2-03" color="text-black" client:load />
</ImagePageLayout>
