---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-1/1-04.webp";
import AnswerComponent from "@/components/inputs/AnswerComponent";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="บีเวอร์"
      text={"โอ้ ! สวัสดี เราบีเวอร์นะ เรากำลังต้องการผู้ช่วยพอดีเลย อยากทำหน้าที่ไหนเป็นพิเศษมั้ย"}
      className="bg-beaver"
    />
  </div>

  <AnswerComponent
    answers={[
      { text: "คำนวณและวางแผนงาน", attribute: "Ni" },
      { text: "ออกแบบตกแต่ง", attribute: "Ne" },
      { text: "ลงมือสร้างเขื่อน", attribute: "Se" },
      { text: "ศึกษาข้อมูลโครงสร้าง", attribute: "Si" },
    ]}
    redirectUrl="/story/1-07"
    client:only="react"
  />
</ImagePageLayout>
