---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import AnswerComponent from "@/components/inputs/AnswerComponent";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-3/06.webp";
import BackgroundImageLow from "@/assets/story/scene-3/06-low.webp";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <div class="absolute top-20 flex w-full justify-center">
    <TextBubble
      name="Engine"
      text={"เธออยากทำตำแหน่งไหนในงานนี้ไหม ?"}
      className="bg-engine"
      client:only="react"
    />
  </div>

  <AnswerComponent
    answers={[
      { text: "แบ่งงาน ดูภาพรวม เป็นคนตัดสินใจ", attribute: "Te" },
      { text: "ผู้ช่วยฝ่ายเทคนิค คิดวิธีแก้ปัญหา", attribute: "Ti" },
      { text: "ฝ่ายประสานงาน สื่อสารกับทุกคน", attribute: "Fe" },
      { text: "เป็นที่ปรึกษา ใครมีปัญหาขอให้บอก", attribute: "Fi" },
    ]}
    redirectUrl="/story/3-09"
    client:only="react"
  />
</ImagePageLayout>
