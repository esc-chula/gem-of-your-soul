<BaseLayout>
  {
    imglow && (
      <link
        rel="preload"
        href={BackgroundImageLow.src}
        as="image"
        fetchpriority="high"
        slot="head"
      />
    )
  }
  <div
    class="absolute z-10 h-full w-full bg-cover bg-center"
    style={`background-image: url(${BackgroundImageLow ? BackgroundImageLow.src : BackgroundImage.src});`}
  >
    <Image
      src={BackgroundImage}
      alt="background"
      class="h-full w-full object-cover"
    />
  </div>
</BaseLayout>
