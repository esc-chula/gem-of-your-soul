---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title = "Astro APP" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="absolute left-1/2 flex min-h-dvh w-full max-w-md -translate-x-1/2 bg-gray-100"
    >
      <slot />
    </main>
  </body>
</html>
