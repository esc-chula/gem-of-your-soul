---
import cn from "@/utils/cn";

interface Props {
  name: string;
  texts: string[];
  className?: string;
}

const { name, texts, className } = Astro.props;
---

<div
  class={cn(
    "border-4 border-white h-fit w-80 rounded-xl select-none",
    className,
  )}>
  <div class="mb-2.5 ml-2.5 mt-2.5 break-words text-left text-sm">
    {
      texts.map((text) => (
        <p>
          <span class="font-semibold">{name}</span> : {text}
        </p>
      ))
    }
  </div>
</div>
