---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-4/02.webp";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <TextBubbleWrapper>
    <TextBubble
      name="%USERNAME%"
      text={"ชาไทย เธออยู่ไหน!!"}
      className="bg-user"
      client:only="react"
    />
  </TextBubbleWrapper>
  <Tap delay={0.5} redirectUrl="/story/4-04" client:load />
</ImagePageLayout>
