---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";

import BackgroundImage from "@/assets/story/scene-1/04.webp";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <div class="absolute top-20 flex w-full justify-center">
    <div class="mb-12 flex flex-col items-center">
        <TextBubble
        name="%USERNAME%"
        text={"สวัสดี ! เรา %USERNAME% นะ เธอดูวุ่น ๆ นะ มีอะไรที่เราพอจะช่วยได้มั้ย ?"}
        className="bg-user"
        client:only
        />
        <TextBubble
        name="บีเวอร์"
        text={"โอ้ ! สวัสดี เราบีเวอร์นะ เรากำลังต้องการผู้ช่วยพอดีเลย อยากทำหน้าที่ไหนเป็นพิเศษมั้ย"}
        className="bg-beaver"
        />
    </div>
  </div>
  <Tap delay={0.5} redirectUrl="/story/1-06" client:load />
</ImagePageLayout>