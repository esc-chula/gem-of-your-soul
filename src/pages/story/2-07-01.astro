---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import BackgroundImage from "@/assets/story/scene-2/2-07.webp";
import BackgroundImageLow from "@/assets/story/scene-2/2-07-low.webp";
import Tap from "@/components/Tap";
import TextBubble from "@/components/TextBubble";
import TextBubbleWrapper from "@/components/TextBubbleWrapper.astro";
---

<ImagePageLayout
  backgroundColor="bg-[#303030]"
  image={BackgroundImage}
  imageLowRes={BackgroundImageLow}
>
  <TextBubbleWrapper>
    <TextBubble
      name="ชาไทย"
      text={"%USERNAME% เราจะทำยังไงกันดี ?"}
      className="bg-chathai"
    />
  </TextBubbleWrapper>
  <Tap
    delay={0.5}
    redirectUrl="/story/2-07-02"
    color="text-black"
    client:load
  /></ImagePageLayout
>
