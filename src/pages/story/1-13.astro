---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";

import BackgroundImage from "@/assets/story/scene-1/09.webp";
import AnswerComponent from "@/components/inputs/AnswerComponent";
---

<ImagePageLayout backgroundColor="bg-[#303030]" image={BackgroundImage}>
  <div class="absolute top-20 flex w-full justify-center">
    <div
      class="h-fit w-80 select-none rounded-xl border-4 border-white bg-[#FF8B74]"
    >
      <div
        class="mb-2.5 ml-2.5 mt-2.5 break-words text-center text-sm font-semibold"
      >
        <p>คุณจึงตอบกลับว่า...</p>
      </div>
    </div>
  </div>

  <AnswerComponent
    answers={[
      { text: "ใช่แล้ว มันออกมาดีมากเลยล่ะ", attribute: "A" },
      { text: "ทุกคนเก่งมาก สำเร็จแล้วนะ", attribute: "B" },
      { text: "ดีใจที่ได้เห็นทุกคนช่วยเหลือกัน", attribute: "C" },
      { text: "ไม่เป็นไร เราอยากช่วยอยู่แล้ว", attribute: "D" },
    ]}
    redirectUrl="/story/1-14"
    client:only
  />
</ImagePageLayout>
